<resources>

    <style name="header_text">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/onBackgroundColor</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="medium_text">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/onBackgroundColor</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="small_text">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/onBackgroundColor</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="about_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">@dimen/rate_app_button_height</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:foregroundTint">@color/onPrimaryColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">36dp</item>
    </style>

</resources>